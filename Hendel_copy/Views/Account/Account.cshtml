@model IEnumerable<Hendel.DAL_copy.Models.User>

<form asp-anti-forgery="true">
    @foreach (var item in Model)
    {
        <div>
            <div class="text-center">
                <div>
                    <img style="width: 200px; margin-left: 2px" src="~/Image/Group 34 (1).png" />

                    <div class="text-center">
                        <img src="~/Image/РамкаДляРегистрации.png" style="width: 1100px; height: 570px ; margin-top:-70px;" />
                    </div>
                </div>
            </div>

            <div style="position: absolute; margin-top: -450px; margin-left: 450px">
                <div style="display: flex;">
                    <p> <p style="font-weight: bold">Имя: </p> @item.Name</p>
                </div>

                <div style="display: flex;">
                    <p> <p style="font-weight: bold">Фамилия: </p> @item.Surname</p>
                </div>

                <div style="display: flex;">
                    <p style="font-weight: bold"> Почта: @item.Email

                        <a asp-area="" asp-action="" asp-controller="" asp-route-id=""
                                                                                   style="
                                                                                   width: 300px;
                                                                                   margin-left: 20px;
                                                                                   position: absolute;
                                                                                   text-decoration: none;
                                                                                   font-weight: 700;
                                                                                   font-size: 15px;
                                                                                   color: black;
                                                                                  ">Подтвердить почту</a>
                    </p>
                </div>

                <div hidden="@(User.IsInRole($"{Role.Пользователь.ToString()}") ? false : true)" style="display: flex;">
                    <a  class="btn btn-dark" asp-area="" asp-action="MyKorzinaView" asp-controller="Account" asp-route-id="@item.Id">Мои покупки</a>
                </div>

                <div hidden="@(User.IsInRole($"{Role.Пользователь.ToString()}") ? false : true)" style="display: flex;">
                    <a class="btn btn-light" asp-area="" asp-action="BuyProduct" asp-controller="Account" asp-route-id="@item.Id">Заказы</a>
                </div>
                
                <div>
                    <a class="btn btn-danger" style="display:flex;justify-content:left" asp-action="LogOut" asp-controller="Account">Выйти из аккаунта</a>
                </div>

                <div style="margin-top: 10px">
                    <a hidden="@(User.Identity.IsAuthenticated ? false : true)" class="buttona" asp-controller="" asp-action="" asp-route-id="" style="    color: black;
                                                                                                                text-decoration: none;
                                                                                                                margin-left: 0px;
                                                                                                                position: absolute;
                                                                                                                border: 2px solid black;
                                                                                                                padding-left: 50px;
                                                                                                                padding-right: 50px;
                                                                                                                padding-bottom: 3px;
                                                                                                                width: 292px;
                                                                                                                padding-top: 5px;"> Редактирвать профиль </a>
                </div>
            </div>

        </div>

       
    }
</form>