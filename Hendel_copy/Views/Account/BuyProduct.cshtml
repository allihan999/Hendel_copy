@using Hendel.DAL_copy;
@model IEnumerable<BuyProducts>;

<div style="position: absolute; margin-top: 158px; margin-left: 100px;">
    <div style="display: flex; flex-direction: column; margin-left: 100px; width: 437px">
        @foreach (var item in Model)
        {
        <div style="border: 1px solid black">
            <div>
                @if (item.Image != null)
                {
                    <img class="img" style="text-align: center; margin-left: auto; width: 200px; margin-right: auto;" src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))" />
                }
            </div>

            <div style="position: absolute; margin-top: -210px; margin-left: 225px; width: 200px">
                <p> <a style="font-weight: bold">Название товара:</a> @item.Name </p>
                <p> <a style="font-weight: bold">Цвет:</a> @item.Description </p>
                <p> <a style="font-weight: bold">Цена:</a> @item.CollPrice </p>
            </div>
        </div>
        }
    </div>
</div>

<div class="text-center" >
    <div>
