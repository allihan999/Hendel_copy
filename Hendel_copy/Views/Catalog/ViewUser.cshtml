@using Hendel.DAL_copy;
@model IEnumerable<MyKorzina>

<div>
    @if (Model.Count() < 1)
    {
        <h1 class="display-4 text-center">Пусто</h1>
    }
    else
    {
        <h3 class="display-4 text-center" style="font-weight: bold">История заказов</h3>
    }

    <div>
        <div style="display: flex; flex-direction: column; margin-left: 100px">
            @foreach (var itemCollection in Model)
            {
                @foreach (var item in itemCollection.KorzinaWatches)
                {
                    <div style="margin-bottom: 10px">
                        <div style="border: 1px solid black">
                            <div>
                                @if (item.Image != null)
                                {
                                    <img class="img" style="text-align: center; margin-left: auto; width: 200px; margin-right: auto;" src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))" />
                                }
                            </div>

                            <div style="position: absolute; margin-top: -210px; margin-left: 250px;">
                                <p> <a style="font-weight: bold">Заказ:</a> @itemCollection.Id </p>
                                <p> <a style="font-weight: bold">Имя:</a> @itemCollection.UserName </p>
                                <p> <a style="font-weight: bold">Фамилия:</a> @itemCollection.Surname </p>
                                <p> <a style="font-weight: bold">Почта:</a> @itemCollection.Email </p>
                            </div>

                            <div style="position: absolute; margin-top: -210px; margin-left: 570px;">
                                <p> <a style="font-weight: bold">Название товара:</a> @item.Name </p>
                                <p> <a style="font-weight: bold">Цвет:</a> @item.Description </p>
                                <p> <a style="font-weight: bold">Цена:</a> @item.Price </p>
                            </div>


                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>